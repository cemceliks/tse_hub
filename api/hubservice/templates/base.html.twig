            <li class="nav-item text-nowrap" style="color: black;">
                {# <a class="nav-link" href="../index.php?lo=1">Sign out</a> #}
            </li>
            </ul>
        </nav>

        <!-- These are important to keep everything in the content window. -->
        <div class="container-fluid">
            <div class="row">

                <nav id="sidebarMenu" class="col-md-2 col-lg-2 d-md-block pt-lg-5 bg-light sidebar collapse">
                    <div class="sidebar-sticky pt-5 mt-5">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                        <a class="nav-link" href="javascript:history.back()">
                            <span data-feather="home"></span>
                            Go Back
                        </a>
                        </li>
                        <li class="nav-item">
